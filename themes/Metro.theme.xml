<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    xmlns:dv="lib://fayde.datavis">
    <Style TargetType="dv:CartesianChart">
        <Setter Property="Padding" Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="dv:CartesianChart">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                        <dv:CartesianChartPresenter x:Name="Presenter" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="dv:LineSeriesPresenter">
        <Setter Property="LineStyle">
            <Setter.Value>
                <Style TargetType="Polyline">
                    <Setter Property="Stroke" Value="Black" />
                    <Setter Property="StrokeThickness" Value="2" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="dv:LinearAxisPresenter">

    </Style>
    <Style TargetType="dv:BarSeriesPresenter">
        <Setter Property="BarStyle">
            <Setter.Value>
                <Style TargetType="Rectangle">
                    <Setter Property="Stroke" Value="Black" />
                    <Setter Property="StrokeThickness" Value="2" />
                    <Setter Property="Fill" Value="#88000000" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="dv:OrdinalAxisPresenter">

    </Style>
</ResourceDictionary>